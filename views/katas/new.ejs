<h2 class="centered display-3">Create and tag a kata</h2>
<form action="/katas/new" method="POST">
  <div class="form-group">
    <label for="name">Kata name</label>
    <input required type="text" id="name" name="name" />
  </div>

  <div class="form-group">
    <label for="cw">Kata Id</label>
    <input required type="text" id="cw" name="cw" />
  </div>

  <div class="form-group">
    <p>Existing subjects</p>
    <% subjects.forEach(s => { %>
    <label class="checkbox-inline">
      <input type="checkbox" name="subject" value="<%= s.name %> " />
      <%= s.name %>
    </label>
    <% }) %>
  </div>

  <button class="btn btn-secondary" type="submit">Submit kata</button>
</form>

