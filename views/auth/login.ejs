<form action="/auth/login" method="POST">
  <label for="auth-email">Email</label>
  <input required id="auth-email" type="email" name="email" />

  <label for="auth-password">Password</label>
  <input required id="auth-password" type="password" name="password" />

  <label for="auth-codewars_username">Codewars Username</label>
  <input
    required
    id="auth-codewars_username"
    type="codewars_username"
    name="codewars_username"
  />

  <input type="submit" value="Log In" />
</form>
